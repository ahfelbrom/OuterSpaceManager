<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pretty_image"
    tools:context="boulet.com.outerspacemanager.outerspacemanager.Activity.FlotteActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReturnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menu" />

        <TextView
            android:id="@+id/tvTitleFlotte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/flotte"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnAddShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/addNewShip" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewFlotte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>