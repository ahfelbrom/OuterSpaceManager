<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pretty_image"
    tools:context="boulet.com.outerspacemanager.outerspacemanager.Activity.BuildingActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnMenuBat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="@string/building" />
    </LinearLayout>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="boulet.com.outerspacemanager.outerspacemanager.Fragments.BuildListFragment"
        android:id="@+id/fragList" />

    <!-- <ListView
        android:id="@+id/listViewBuilding"
        android:layout_width="match_parent"
        android:layout_height="match_parent" /> -->
</LinearLayout>