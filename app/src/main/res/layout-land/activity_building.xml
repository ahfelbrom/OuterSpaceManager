<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pretty_image"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnMenuBat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="boulet.com.outerspacemanager.outerspacemanager.Fragments.BuildListFragment"
        android:id="@+id/fragList" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:name="boulet.com.outerspacemanager.outerspacemanager.Fragments.BuildDetailsFragment"
        android:id="@+id/fragDetails"
        android:layout_gravity="center_vertical" />
</LinearLayout>